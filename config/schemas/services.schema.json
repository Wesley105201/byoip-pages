{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CDN服务配置",
  "type": "object",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "服务唯一标识符"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "服务显示名称"
          },
          "provider": {
            "type": "string",
            "enum": ["cloudflare", "cloudfront", "edgeone", "other"],
            "description": "CDN提供商类型"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "服务描述"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "maintenance"],
            "description": "当前服务状态"
          },
          "optimizedIPs": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
            },
            "minItems": 1,
            "description": "优化IP地址列表"
          },
          "nodeStatus": {
            "type": "string",
            "enum": ["online", "offline", "slow"],
            "description": "节点状态指示器"
          },
          "responseTime": {
            "type": "number",
            "minimum": 0,
            "description": "Response time in milliseconds"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Service tags"
          }
        },
        "required": ["id", "name", "provider", "description", "status", "optimizedIPs", "nodeStatus", "tags"],
        "additionalProperties": false
      }
    }
  },
  "required": ["services"],
  "additionalProperties": false
}